<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.CollapsingToolbarLayout
        android:id="@+id/col1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_scrollFlags="scroll|exitUntilCollapsed"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_left_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="10dp">
    </androidx.constraintlayout.widget.Guideline>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_right_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="14dp">
    </androidx.constraintlayout.widget.Guideline>
    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/home_top_search_et"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/home_left_guide"
        app:layout_constraintEnd_toEndOf="@id/home_right_guide"
        android:hint="오늘의집 통합검색"
        android:textSize="14dp"
        android:paddingStart="36dp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/home_custom_search"
        >
    </androidx.appcompat.widget.AppCompatEditText>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_top_search_ic"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="@id/home_top_search_et"
        app:layout_constraintTop_toTopOf="@id/home_top_search_et"
        app:layout_constraintBottom_toBottomOf="@id/home_top_search_et"
        android:layout_marginStart="12dp"
        android:background="@drawable/home_search_icon"
        android:scaleType="fitXY"
        >
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_top_scrap"
        android:layout_width="21.5dp"
        android:layout_height="24.5dp"
        app:layout_constraintStart_toEndOf="@id/home_top_search_et"
        app:layout_constraintTop_toTopOf="@id/home_top_search_et"
        app:layout_constraintBottom_toBottomOf="@id/home_top_search_et"
        android:background="@drawable/home_top_scrapbook_icon"
        android:layout_marginStart="21dp">
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/home_top_basket"
        android:layout_width="24.5dp"
        android:layout_height="24.5dp"
        app:layout_constraintEnd_toEndOf="@id/home_right_guide"
        app:layout_constraintTop_toTopOf="@id/home_top_search_et"
        app:layout_constraintBottom_toBottomOf="@id/home_top_search_et"
        android:background="@drawable/home_top_basket_icon">
    </androidx.appcompat.widget.AppCompatImageView>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/home_tabs"
        android:layout_width="470dp"
        android:layout_height="43dp"
        app:tabIndicatorHeight="3.5dp"
        app:tabIndicatorColor="#39C4EE"
        app:tabSelectedTextColor="#39C4EE"
        app:tabTextColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_top_search_et"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:paddingEnd="3dp"
        android:background="@drawable/home_custom_tab_border"
        app:tabMode="scrollable"
        style="@style/MyCustomTabLayout"
        app:tabRippleColor="@color/transparent"
        app:layout_constraintHorizontal_weight="1.0"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab1"
            />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab2" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab3" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab4" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab5" />
        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_tab6" />
    </com.google.android.material.tabs.TabLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
    android:id="@+id/viewPager"
    android:layout_width="match_parent"
    android:layout_height="723dp"
    app:layout_constraintTop_toTopOf="parent"
    >
    </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!--        바텀 바-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_bottom_const"
        android:layout_width="match_parent"
        android:layout_height="52.5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bottom_bar_border">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_btn1"
            android:layout_width="23.8dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/bottom_btn1_on"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottom_btn1"
            app:layout_constraintStart_toStartOf="@id/bottom_btn1"
            app:layout_constraintEnd_toEndOf="@id/bottom_btn1"
            android:layout_marginTop="4dp"
            android:textColor="#3AC3F2"
            android:text="@string/main_bottom1"
            android:textSize="11sp"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_btn2"
            android:layout_width="23.8dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@id/bottom_btn1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="78dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/bottom_btn2_off"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottom_btn2"
            app:layout_constraintStart_toStartOf="@id/bottom_btn2"
            app:layout_constraintEnd_toEndOf="@id/bottom_btn2"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:text="@string/main_bottom2"
            android:textSize="11sp"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_btn3"
            android:layout_width="23.8dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@id/bottom_btn2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="78dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/bottom_btn3_off"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottom_btn3"
            app:layout_constraintStart_toStartOf="@id/bottom_btn3"
            app:layout_constraintEnd_toEndOf="@id/bottom_btn3"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:text="@string/main_bottom3"
            android:textSize="11sp"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bottom_btn4"
            android:layout_width="23.8dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="@id/bottom_btn3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="78dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/bottom_btn4_off"
            >
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bottom_btn4"
            app:layout_constraintStart_toStartOf="@id/bottom_btn4"
            app:layout_constraintEnd_toEndOf="@id/bottom_btn4"
            android:layout_marginTop="4dp"
            android:textColor="#757575"
            android:text="@string/main_bottom4"
            android:textSize="11sp"
            android:textStyle="bold">
        </androidx.appcompat.widget.AppCompatTextView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:fabCustomSize="40dp"
            android:src="@drawable/bottom_bar_floating_icon"
            android:backgroundTint="#34C4EF"
            android:tintMode="screen"
            >
        </com.google.android.material.floatingactionbutton.FloatingActionButton>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>