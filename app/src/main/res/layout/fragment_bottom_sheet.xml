<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sheet_indicator"
        android:layout_width="40dp"
        android:layout_height="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sheet_background"
        android:layout_marginBottom="8dp"
        android:background="@drawable/purchase_sheet_top_img_round">
    </androidx.appcompat.widget.AppCompatImageView>

<!--    background-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sheet_background"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="-105dp"
        android:background="@drawable/purchase_sheet_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/sheet_view">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_color"
        android:layout_width="380dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toTopOf="@id/sheet_selected_item_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        android:text="색상"
        android:gravity="top|bottom"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:clickable="true"
        android:background="@drawable/purchase_sheet_color_border">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sheet_color"
        app:layout_constraintBottom_toBottomOf="@id/sheet_color"
        app:layout_constraintEnd_toEndOf="@id/sheet_color"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/purchase_arrow_on"
        android:adjustViewBounds="true">
    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_add"
        android:layout_width="380dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/sheet_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="추가상품 (선택)"
        android:gravity="top|bottom"
        android:paddingStart="15dp"
        android:textColor="@color/black"
        android:background="@drawable/purchase_sheet_add_border">
    </androidx.appcompat.widget.AppCompatTextView>





    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/sheet_add"
        app:layout_constraintBottom_toBottomOf="@id/sheet_add"
        app:layout_constraintEnd_toEndOf="@id/sheet_add"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/purchase_arrow_off"
        android:adjustViewBounds="true">
    </androidx.appcompat.widget.AppCompatImageView>
    <ScrollView
        android:id="@+id/sheet_color_item1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sheet_color"
        app:layout_constraintStart_toStartOf="@id/sheet_color"
        app:layout_constraintEnd_toEndOf="@id/sheet_color"
        android:clickable="false"
        android:visibility="gone">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_border_verify_activate">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sheet_color_item1_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:text="엘리트 브라운"
                android:gravity="top|bottom"
                android:paddingStart="15dp"
                android:textSize="11sp"
                android:textColor="@color/black">
            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sheet_color_item1_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="299,900원"
                android:gravity="top|bottom"
                android:paddingEnd="15dp"
                android:textSize="11sp"
                android:textColor="@color/appMainColor"
                android:textStyle="bold">
            </androidx.appcompat.widget.AppCompatTextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



    <androidx.cardview.widget.CardView
        android:id="@+id/sheet_selected_item_info"
        android:layout_width="380dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sheet_view"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        app:cardElevation="0dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3">
        </ImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sheet_selected_item_cancel"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:srcCompat="@drawable/purchase_sheet_item_cancle"
            android:adjustViewBounds="true">
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sheet_selected_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:text="색상: 엘리트 브라운"
            android:textColor="@color/black">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sheet_selected_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="26dp"
            android:text="299,900"
            android:textSize="15sp"
            android:textColor="@color/black">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="12dp"
            android:text="원"
            android:textSize="15sp"
            android:textColor="@color/black">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sheet_selected_item_count"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:background="@drawable/purchase_sheet_item_count_border">
        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sheet_selected_item_minus"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/sheet_item_minus"
            android:adjustViewBounds="true">
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sheet_selected_item_plus"
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="11dp"
            app:srcCompat="@drawable/sheet_item_plus"
            android:adjustViewBounds="true">
        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/sheet_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="210dp"
        android:background="#E1E1E1">
    </View>



    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_view"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:text="주문금액"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textStyle="bold">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_cost_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_view"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="29dp"
        android:text="0"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_view"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:text="원"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sheet_basket"
        android:layout_width="190dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_view"
        android:layout_marginTop="52dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:text="장바구니"
        android:textColor="@color/appMainColor"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/login_border_verify_activate">
    </androidx.appcompat.widget.AppCompatTextView>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sheet_view"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:text="바로구매"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="15sp"
        android:background="@drawable/purchase_sheet_purchase">
    </androidx.appcompat.widget.AppCompatTextView>


</androidx.constraintlayout.widget.ConstraintLayout>